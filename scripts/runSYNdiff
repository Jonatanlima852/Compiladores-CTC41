#!/bin/bash

# Script para comparar saídas sintáticas
# Baseado nas dicas dos professores

for f in ../alunodetail/*syn*.txt   
do 
    OUTFILE=../detail/`basename $f` 
    echo running diff  $f x ${OUTFILE} 
    diff -ZbB $f ${OUTFILE} > ../alunodetail/`basename -s .txt $f`.diff 
done 

echo GENERATED DIFFS - SYN 
wc ../alunodetail/*_syn.diff 

echo "suggestions:" 
echo "% batcat ../alunodetail/*syn*txt" 
echo "% batcat ../alunodetail/*syn*diff" 
echo "% meld ../alunodetail/ ../detail/"
